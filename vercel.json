{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist", 
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.investment-assistant.site/api/v1/:path*"
    },
    {
      "source": "/ws/:path*",
      "destination": "https://api.investment-assistant.site/api/v1/ws/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" },
        { "key": "Pragma", "value": "no-cache" }
      ]
    }
  ],
  "env": {
    "VITE_API_BASE": "/api",
    "VITE_WS_BASE": "/ws"
  }
}